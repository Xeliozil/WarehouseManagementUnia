<Window x:Class="WarehouseManagementUnia.Views.AddProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Product" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Product Name:"/>
        <TextBox Grid.Row="1" Text="{Binding ProductName}" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Content="Quantity:"/>
        <TextBox Grid.Row="3" Text="{Binding Quantity, StringFormat=N0}" Margin="0,0,0,10"/>

        <Label Grid.Row="4" Content="Price:"/>
        <TextBox Grid.Row="5" Text="{Binding Price, StringFormat=C2}" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>