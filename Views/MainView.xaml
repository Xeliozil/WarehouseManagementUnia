<Window x:Class="WarehouseManagementUnia.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warehouse Management - Unia" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Topbar -->
        <StackPanel Orientation="Horizontal" Background="LightGray" Margin="5">
            <Button Content="Stock" Command="{Binding ShowStockViewCommand}" Margin="5" Width="100"/>
            <Button Content="Contractors" Command="{Binding ShowContractorsViewCommand}" Margin="5" Width="100"/>
            <Button Content="Documents" Command="{Binding ShowDocumentsViewCommand}" Margin="5" Width="100"/>
        </StackPanel>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="10"/>
    </Grid>
</Window>