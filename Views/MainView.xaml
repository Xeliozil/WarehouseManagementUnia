<Window x:Class="WarehouseManagementUnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unia Warehouse Management" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray">
            <Button Content="Stock" Command="{Binding NavigateStockCommand}" Margin="5"/>
            <Button Content="Contractors" Command="{Binding NavigateContractorsCommand}" Margin="5"/>
            <Button Content="Documents" Command="{Binding NavigateDocumentsCommand}" Margin="5"/>
        </StackPanel>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>