<Window x:Class="WarehouseManagementUnia.Views.AddContractorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Contractor" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox Text="{Binding Name}" Margin="5"/>
            <TextBlock Text="Address:"/>
            <TextBox Text="{Binding Address}" Margin="5"/>
            <TextBlock Text="NIP:"/>
            <TextBox Text="{Binding NIP}" Margin="5"/>
            <Button Content="Add" Command="{Binding AddCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>