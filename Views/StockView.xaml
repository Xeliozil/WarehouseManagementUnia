<UserControl x:Class="WarehouseManagementUnia.Views.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <ListBox ItemsSource="{Binding Warehouses}" SelectedItem="{Binding SelectedWarehouse}"
                 DisplayMemberPath="WarehouseCode" Margin="5"/>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Filter Bar -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox Text="{Binding FilterName, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="5"/>
                <Button Content="Filter" Command="{Binding FilterCommand}" Margin="5"/>
            </StackPanel>

            <!-- Data Grid -->
            <DataGrid ItemsSource="{Binding Products}" AutoGenerateColumns="False" Grid.Row="1" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                    <DataGridTextColumn Header="Warehouse" Binding="{Binding WarehouseCode}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Add Product" Command="{Binding AddProductCommand}" Margin="5"/>
                <Button Content="Document" Command="{Binding OpenDocumentCommand}" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>