<Window x:Class="WarehouseManagementUnia.Views.DocumentsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Documents" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Document Type:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox ItemsSource="{Binding DocumentTypes}" 
                      SelectedItem="{Binding SelectedDocumentType}" 
                      DisplayMemberPath="TypeName" 
                      Width="150" Margin="5"/>
            <TextBlock Text="Contractor:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox ItemsSource="{Binding Contractors}" 
                      SelectedItem="{Binding SelectedContractor}" 
                      DisplayMemberPath="Name" 
                      Width="150" Margin="5"/>
            <Button Content="Show All" Command="{Binding ClearFiltersCommand}" Margin="5"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Documents}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Document Type" Binding="{Binding DocumentTypeName}"/>
                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Warehouse" Binding="{Binding WarehouseCode}"/>
                <DataGridTextColumn Header="Contractor" Binding="{Binding ContractorName}"/>
                <DataGridTextColumn Header="NIP" Binding="{Binding ContractorNIP}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DocumentDate, StringFormat=yyyy-MM-dd}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>