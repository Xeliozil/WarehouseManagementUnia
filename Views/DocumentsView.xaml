<UserControl x:Class="WarehouseManagementUnia.Views.DocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Document Type:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding DocumentTypes}" 
                      SelectedItem="{Binding SelectedDocumentType}" 
                      DisplayMemberPath="TypeName" 
                      Width="150" Margin="5"/>

            <TextBlock Text="Contractor:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox ItemsSource="{Binding Contractors}" 
                      SelectedItem="{Binding SelectedContractor}" 
                      DisplayMemberPath="Name" 
                      Width="150" Margin="5"/>

            <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Documents Table -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Documents}" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Document ID" Binding="{Binding DocumentId}"/>
                <DataGridTextColumn Header="Document Type" Binding="{Binding DocumentTypeName}"/>
                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Warehouse" Binding="{Binding WarehouseCode}"/>
                <DataGridTextColumn Header="Contractor" Binding="{Binding ContractorName}"/>
                <DataGridTextColumn Header="NIP" Binding="{Binding ContractorNIP}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding DocumentDate, StringFormat=yyyy-MM-dd}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>