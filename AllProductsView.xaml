<UserControl x:Class="WarehouseManagementUnia.AllProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WarehouseManagementUnia"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="&lt;" FontSize="16" Width="30" Height="30" HorizontalAlignment="Left" Click="Back_Click"/>
        <TextBlock Grid.Row="0" Text="Wszystkie produkty" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,10"/>
        <DataGrid Grid.Row="1" x:Name="AllProductsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="Foreground" Value="{Binding FontColorBrush, Source={x:Static local:SettingsHelper.Instance}}" />
                    <Setter Property="FontSize" Value="{Binding FontSize, Source={x:Static local:SettingsHelper.Instance}}" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Cena" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Ilość" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Aktywny" Binding="{Binding IsActive}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="AddButton" Content="Dodaj produkt" Width="120" Margin="5" Click="AddProduct_Click"/>
            <Button x:Name="DeleteButton" Content="Usuń produkt" Width="120" Margin="5" Click="DeleteProduct_Click"/>
        </StackPanel>
    </Grid>
</UserControl>