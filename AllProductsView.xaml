<UserControl x:Class="WarehouseManagementUnia.AllProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ProductsGrid" AutoGenerateColumns="True" IsReadOnly="True" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Dodaj produkt" Width="100" Height="30" Margin="0,0,10,0" Click="AddProduct_Click"/>
            <Button Content="Aktywuj/Dezaktywuj" Width="100" Height="30" Margin="0,0,10,0" Click="ToggleActive_Click"/>
            <Button Content="Usuń produkt" Width="100" Height="30" Click="DeleteProduct_Click"/>
        </StackPanel>
    </Grid>
</UserControl>