<Window x:Class="WarehouseManagementUnia.AddIssueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj wydanie" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Produkt"/>
            <ComboBox x:Name="ProductComboBox" Width="300" DisplayMemberPath="Name"/>
            <Label Content="Kontrahent"/>
            <ComboBox x:Name="ContractorComboBox" Width="300" DisplayMemberPath="Name"/>
            <Label Content="Ilość"/>
            <TextBox x:Name="QuantityTextBox" Width="300"/>
            <Label Content="Data wydania"/>
            <DatePicker x:Name="IssueDatePicker" Width="300"/>
            <Label Content="Opis"/>
            <TextBox x:Name="DescriptionTextBox" Width="300"/>
            <Button Content="Dodaj" Width="100" Margin="0,10,0,0" Click="AddIssue_Click"/>
        </StackPanel>
    </Grid>
</Window>