<Window x:Class="WarehouseManagementUnia.AddIssueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj wydanie" Height="300" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Nazwa produktu"/>
            <ComboBox x:Name="ProductComboBox" Width="200" DisplayMemberPath="Name"/>
            <Label Content="Ilość"/>
            <TextBox x:Name="QuantityTextBox" Width="200"/>
            <Label Content="Data wydania (rrrr-mm-dd)"/>
            <TextBox x:Name="IssueDateTextBox" Width="200"/>
            <Label Content="Opis (opcjonalny)"/>
            <TextBox x:Name="DescriptionTextBox" Width="200"/>
            <Button Content="Zapisz" Width="100" Margin="0,10,0,0" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>