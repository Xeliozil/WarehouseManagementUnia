<Window x:Class="WarehouseManagementUnia.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Nazwa użytkownika:"/>
        <TextBox Grid.Row="1" x:Name="UsernameTextBox" Width="200" HorizontalAlignment="Left"/>
        <Label Grid.Row="2" Content="Hasło:" Margin="0,10,0,0"/>
        <PasswordBox Grid.Row="3" x:Name="PasswordBox" Width="200" HorizontalAlignment="Left" KeyDown="PasswordBox_KeyDown"/>
        <Button Grid.Row="4" Content="Zaloguj" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,10,0,0" Click="Login_Click"/>
    </Grid>
</Window>