<Window x:Class="WarehouseManagementUnia.StockView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stany magazynowe" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <GroupBox Header="Lista produktów">
            <DataGrid x:Name="ProductsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Ilość" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Cena" Binding="{Binding Price, StringFormat=C}" Width="100"/>
                    <DataGridCheckBoxColumn Header="Aktywny" Binding="{Binding IsActive}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>