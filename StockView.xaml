<UserControl x:Class="WarehouseManagementUnia.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ProductsGrid" AutoGenerateColumns="True" IsReadOnly="True" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Wygeneruj raport" Width="120" Height="30" Click="GenerateReport_Click"/>
        </StackPanel>
    </Grid>
</UserControl>