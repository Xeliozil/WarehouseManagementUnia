<UserControl x:Class="WarehouseManagementUnia.DeliveriesIssuesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:WarehouseManagementUnia"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Content="&lt;" FontSize="16" Width="30" Height="30" HorizontalAlignment="Left" Click="Back_Click"/>
        <TextBlock Grid.Row="0" Text="Dostawy i wydania" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,10"/>
        <GroupBox Grid.Row="1" Header="Transakcje">
            <DataGrid x:Name="TransactionsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="{Binding FontColorBrush, Source={x:Static local:SettingsHelper.Instance}}" />
                        <Setter Property="FontSize" Value="{Binding FontSize, Source={x:Static local:SettingsHelper.Instance}}" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Typ" Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Produkt ID" Binding="{Binding ProductId}"/>
                    <DataGridTextColumn Header="Ilość" Binding="{Binding Quantity}"/>
                    <DataGridTextColumn Header="Data" Binding="{Binding Date}"/>
                    <DataGridTextColumn Header="Kontrahent ID" Binding="{Binding ContractorId}"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Dodaj dostawę" Width="150" Margin="0,0,10,0" Click="AddDelivery_Click"/>
            <Button Content="Dodaj wydanie" Width="150" Click="AddIssue_Click"/>
        </StackPanel>
    </Grid>
</UserControl>