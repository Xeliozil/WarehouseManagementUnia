<UserControl x:Class="WarehouseManagementUnia.DeliveriesIssuesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="TransactionsGrid" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Typ" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="ID produktu" Binding="{Binding ProductId}" Width="100"/>
                <DataGridTextColumn Header="Ilość" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Data" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="100"/>
                <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*" ElementStyle="{StaticResource WrappingText}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Dodaj dostawę" Width="100" Height="30" Margin="0,0,10,0" Click="AddDelivery_Click"/>
            <Button Content="Dodaj wydanie" Width="100" Height="30" Click="AddIssue_Click"/>
        </StackPanel>
    </Grid>
</UserControl>