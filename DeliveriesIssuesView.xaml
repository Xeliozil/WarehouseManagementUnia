<UserControl x:Class="WarehouseManagementUnia.DeliveriesIssuesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="TransactionsGrid" AutoGenerateColumns="True" IsReadOnly="True" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Dodaj dostawę" Width="100" Height="30" Margin="0,0,10,0" Click="AddDelivery_Click"/>
            <Button Content="Dodaj wydanie" Width="100" Height="30" Click="AddIssue_Click"/>
        </StackPanel>
    </Grid>
</UserControl>