<Window x:Class="WarehouseManagementUnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System zarządzania magazynem - Unia" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Stany magazynowe" Width="150" Margin="0,10" Click="ShowStock_Click"/>
            <Button Content="Dostawy i wydania" Width="150" Margin="0,10" Click="ShowDeliveriesIssues_Click"/>
            <Button Content="Kontrahenci" Width="150" Margin="0,10" Click="ShowContractors_Click"/>
            <Button Content="Raporty" Width="150" Margin="0,10" Click="ShowReports_Click"/>
        </StackPanel>
    </Grid>
</Window>