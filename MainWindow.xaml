<Window x:Class="WarehouseManagementUnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WarehouseManagementUnia.ViewModels"
        Title="Warehouse Management" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <DockPanel>
        <!-- Pasek nawigacyjny -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="LightGray" Height="50">
            <Button Content="Stan Magazynowy" Command="{Binding ShowInventoryViewCommand}" Margin="5"/>
            <Button Content="Kontrahenci" Command="{Binding ShowContractorsViewCommand}" Margin="5"/>
            <Button Content="Dokumenty" Command="{Binding ShowDocumentsViewCommand}" Margin="5"/>
            <Button Content="Pusty Widok" Command="{Binding ShowEmptyViewCommand}" Margin="5"/>
            <TextBlock Text="{Binding CurrentViewTitle}" VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Bold"/>
        </StackPanel>

        <!-- Obszar widoku -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
