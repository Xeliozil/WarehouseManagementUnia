<Window x:Class="WarehouseManagementUnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseManagementUnia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ProductsGrid" AutoGenerateColumns="True" Margin="10,10,10,60"/>
        <Button Content="Dodaj produkt" Width="100" Height="30" Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="AddProduct_Click"/>
        <Button Content="Usuń produkt" Width="100" Height="30" Margin="120,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="DeleteProduct_Click"/>
    </Grid>
</Window>
