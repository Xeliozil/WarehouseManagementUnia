<Window x:Class="WarehouseManagementUnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Zarządzania Magazynem - Unia Koszalin" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ikonka zębatki -->
        <Button Grid.Row="0" x:Name="SettingsButton" Content="⚙" FontSize="20" Width="40" Height="40" HorizontalAlignment="Right" Margin="0,5,5,5" Click="SettingsButton_Click"/>

        <!-- Obszar główny -->
        <ContentControl Grid.Row="1" x:Name="MainContent"/>
    </Grid>
</Window>