<Window x:Class="WarehouseManagementUnia.AddContractorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj kontrahenta" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Nazwa"/>
            <TextBox x:Name="NameTextBox" Width="300" Margin="0,0,0,5"/>
            <Label Content="Adres"/>
            <TextBox x:Name="AddressTextBox" Width="300" Margin="0,0,0,5"/>
            <Label Content="NIP"/>
            <TextBox x:Name="NIPTextBox" Width="300" Margin="0,0,0,10"/>
            <Button Content="Dodaj" Width="100" Click="AddContractor_Click"/>
        </StackPanel>
    </Grid>
</Window>