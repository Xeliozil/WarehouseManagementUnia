<Window x:Class="WarehouseManagementUnia.AddContractorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj kontrahenta" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="NIP"/>
            <TextBox x:Name="NIPTextBox" Width="300"/>
            <Button Content="Pobierz dane" Width="100" Margin="0,5,0,0" Click="FetchData_Click"/>
            <Label Content="Nazwa"/>
            <TextBox x:Name="NameTextBox" Width="300"/>
            <Label Content="Adres"/>
            <TextBox x:Name="AddressTextBox" Width="300"/>
            <Button Content="Dodaj" Width="100" Margin="0,10,0,0" Click="AddContractor_Click"/>
        </StackPanel>
    </Grid>
</Window>